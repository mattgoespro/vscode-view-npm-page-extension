{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2022"],
    "types": ["node"],
    "sourceMap": true,
    "rootDir": "src",
    "skipLibCheck": true
  }
}
